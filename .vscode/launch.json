{
  "version": "0.2.0",
  "configurations": [
      {
         "name": "Python: FastAPI",
         "type": "debugpy",
         "request": "launch",
         "module": "uvicorn",
         "args": [
            "api.app:app",
            "--reload",
            "--reload-dir", "./api",
            "--reload-dir", "./services",
            "--reload-dir", "./model",
            "--port", "8080"
         ],
         "jinja": true,
         "justMyCode": true,
         "cwd": "${workspaceFolder}",
         "env": {
            "PYTHONPATH": "${workspaceFolder}/api/src:${workspaceFolder}/services/src:${workspaceFolder}/model/src"
         }
      },
      {
         "name": "Docker: FastAPI",
         "type": "node",
         "request": "launch",
         "program": "${workspaceFolder}/scripts/docker-run.ps1",
         "console": "integratedTerminal",
         "cwd": "${workspaceFolder}",
         "runtimeExecutable": "pwsh",
         "runtimeArgs": ["-File"]
      },
      {
         "name": "Python: Current File",
         "type": "debugpy",
         "request": "launch",
         "program": "${file}",
         "console": "integratedTerminal",
         "justMyCode": true
      },
      {
         "name": "Python: Main",
         "type": "debugpy",
         "request": "launch",
         "program": "${workspaceFolder}/main.py",
         "console": "integratedTerminal",
         "justMyCode": true
      },
      {
         "name": "Pytest: All Tests",
         "type": "debugpy",
         "request": "launch",
         "module": "pytest",
         "args": [
            "./model/tests",
            "./services/tests",
            "-v"
         ],
         "cwd": "${workspaceFolder}",
         "env": {
            "PYTHONPATH": "${workspaceFolder}/model/src:${workspaceFolder}/services/src"
         },
         "console": "integratedTerminal"
      },
      {
         "name": "Pytest: Current File",
         "type": "debugpy",
         "request": "launch",
         "module": "pytest",
         "args": [
            "${file}",
            "-v"
         ],
         "cwd": "${workspaceFolder}/model",
         "env": {
            "PYTHONPATH": "${workspaceFolder}/model/src"
         },
         "console": "integratedTerminal"
      }
  ]
}