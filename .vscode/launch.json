{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Main",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
   {
      "name": "Python: All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
         "./model/tests",
         "./services/tests",
         "-v"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
         "PYTHONPATH": "${workspaceFolder}/model/src:${workspaceFolder}/services/src"
      },
      "console": "integratedTerminal"
   },
   {
      "name": "Python: Tests in Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
         "${file}",
         "-v"
      ],
      "cwd": "${workspaceFolder}/model",
      "env": {
         "PYTHONPATH": "${workspaceFolder}/model/src"
      },
      "console": "integratedTerminal"
   }
  ]
}