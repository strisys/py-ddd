{
  "files.exclude": {
    "**/.pytest_cache": true,
    "**/pyproject.toml": true,
    "**/.gitignore": true,
    "**/scripts": true,
    "**/ReadMe.md": true,
    "**/**/setup.py": true,
    "**/*.egg-info/": true,
    "**/.devcontainer": false,
    "**/Dockerfile": false,
    "**/requirements.txt": false,
    "**/.vscode/launch.json": false,
    "**/**/__init__.py": false,
  },
  "editor.tabSize": 3,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "[python]": {
    "editor.tabSize": 3,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  }
}
